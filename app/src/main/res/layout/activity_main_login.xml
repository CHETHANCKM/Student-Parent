<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2D51"
    tools:context=".main_login">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seguisb"
                android:text="Our Classroom"

                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/seguisb"

                android:text="A parent teacher interactive application"
                android:textAlignment="center"
                android:textColor="#595773  "
                android:textSize="16dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:backgroundTint="#B2F4DC"
                android:fontFamily="@font/seguisb"
                android:text="Parent Login"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:backgroundTint="#595773"
                android:fontFamily="@font/seguisb"
                android:text="Teacher  Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>